{
  "swagger": "2.0",
  "info": {
    "description": "API for email verification service",
    "title": "Email Checker API",
    "version": "1.0",
    "contact": {}
  },
  "host": "localhost:8080",
  "basePath": "/",
  "schemes": ["http"],
  "paths": {
    "/cache/status": {
      "get": {
        "summary": "Get cache status",
        "description": "Get cache statistics",
        "tags": ["cache"],
        "produces": ["application/json"],
        "responses": {
          "200": {
            "description": "Cache statistics",
            "schema": {
              "$ref": "#/definitions/CacheStatusResponse"
            }
          }
        }
      }
    },
    "/cache/flush": {
      "post": {
        "summary": "Clear cache",
        "description": "Flush all cached data",
        "tags": ["cache"],
        "produces": ["application/json"],
        "responses": {
          "200": {
            "description": "Success message",
            "schema": {
              "type": "object",
              "properties": {
                "message": {
                  "type": "string",
                  "example": "Cache successfully flushed"
                }
              }
            }
          }
        }
      }
    },
    "/tasks": {
      "post": {
        "summary": "Create new verification task",
        "description": "Create task for email verification",
        "tags": ["tasks"],
        "consumes": ["application/json"],
        "produces": ["application/json"],
        "parameters": [
          {
            "name": "request",
            "in": "body",
            "description": "Email list",
            "required": true,
            "schema": {
              "$ref": "#/definitions/Request"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "OK",
            "schema": {
              "$ref": "#/definitions/TaskIDResponse"
            }
          },
          "400": {
            "description": "Invalid request"
          }
        }
      }
    },
    "/tasks/{task_id}": {
      "get": {
        "summary": "Get task status",
        "description": "Get verification task status and results",
        "tags": ["tasks"],
        "produces": ["application/json"],
        "parameters": [
          {
            "name": "task_id",
            "in": "path",
            "type": "string",
            "required": true,
            "description": "Task ID"
          }
        ],
        "responses": {
          "200": {
            "description": "OK",
            "schema": {
              "$ref": "#/definitions/TaskStatusResponse"
            }
          },
          "404": {
            "description": "Task not found"
          }
        }
      }
    },
    "/tasks-results/{task_id}": {
      "get": {
        "summary": "Get paginated results",
        "description": "Get paginated results for completed task",
        "tags": ["tasks"],
        "produces": ["application/json"],
        "parameters": [
          {
            "name": "task_id",
            "in": "path",
            "type": "string",
            "required": true,
            "description": "Task ID"
          },
          {
            "name": "page",
            "in": "query",
            "type": "integer",
            "default": 1,
            "minimum": 1,
            "description": "Page number"
          },
          {
            "name": "per_page",
            "in": "query",
            "type": "integer",
            "default": 100,
            "minimum": 1,
            "maximum": 100,
            "description": "Items per page"
          }
        ],
        "responses": {
          "200": {
            "description": "Paginated response",
            "schema": {
              "$ref": "#/definitions/PaginatedResponse"
            }
          },
          "404": {
            "description": "Task not found"
          }
        }
      }
    },
    "/swagger/": {
      "get": {
        "summary": "Get Swagger UI",
        "tags": ["documentation"],
        "produces": ["text/html"],
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      }
    }
  },
  "definitions": {
    "CacheStatusResponse": {
      "type": "object",
      "properties": {
        "items": {
          "type": "integer",
          "example": 1425,
          "description": "Total cached items"
        },
        "memory": {
          "type": "string",
          "example": "12.34 MB",
          "description": "Memory usage"
        },
        "hits": {
          "type": "integer",
          "example": 24500,
          "description": "Cache hit count"
        },
        "misses": {
          "type": "integer",
          "example": 1780,
          "description": "Cache miss count"
        }
      }
    },
    "Request": {
      "type": "object",
      "properties": {
        "emails": {
          "type": "array",
          "items": {
            "type": "string",
            "maxLength": 254
          },
          "maxItems": 10000,
          "description": "Array of email addresses (maximum 10,000). Each email address must not exceed 254 characters."
        }
      },
      "description": "Request object containing a list of email addresses to verify."
    },
    "TaskIDResponse": {
      "type": "object",
      "properties": {
        "task_id": {
          "type": "string",
          "example": "123456789"
        }
      }
    },
    "TaskStatusResponse": {
      "type": "object",
      "properties": {
        "status": {
          "type": "string",
          "example": "completed"
        },
        "total_results": {
          "type": "integer",
          "example": 1500
        },
        "created_at": {
          "type": "string",
          "format": "date-time",
          "example": "2024-01-15T14:30:00Z"
        },
        "total_pages": {
          "type": "integer",
          "example": 15
        }
      }
    },
    "PaginatedResponse": {
      "type": "object",
      "properties": {
        "data": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/EmailReport"
          }
        },
        "page": {
          "type": "integer",
          "example": 2
        },
        "per_page": {
          "type": "integer",
          "example": 100
        },
        "total": {
          "type": "integer",
          "example": 1500
        }
      }
    },
    "EmailReport": {
      "type": "object",
      "properties": {
        "email": {
          "type": "string",
          "example": "test@example.com"
        },
        "valid": {
          "type": "boolean",
          "example": true
        },
        "disposable": {
          "type": "boolean",
          "example": false
        },
        "exists": {
          "type": "boolean",
          "example": true
        },
        "mx": {
          "$ref": "#/definitions/MXStats"
        },
        "permanent_error": {
          "type": "boolean",
          "example": false
        },
        "error_category": {
          "type": "string",
          "example": "server_error"
        },
        "ttl": {
          "type": "integer",
          "example": 3600
        },
        "smtp_error": {
          "type": "string",
          "example": "550 Mailbox not found"
        }
      }
    },
    "MXStats": {
      "type": "object",
      "properties": {
        "valid": {
          "type": "boolean",
          "example": true
        },
        "records": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/MXRecord"
          }
        },
        "error": {
          "type": "string",
          "example": "MX lookup failed"
        }
      }
    },
    "MXRecord": {
      "type": "object",
      "properties": {
        "host": {
          "type": "string",
          "example": "mail.example.com"
        },
        "priority": {
          "type": "integer",
          "example": 10
        },
        "ttl": {
          "type": "integer",
          "example": 3600
        }
      }
    }
  }
}